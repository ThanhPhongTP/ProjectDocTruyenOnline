<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ProjectDocTruyenOnline_Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#eeeeee</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorGreen</item>
        <item name="android:textColorHint">@color/colorGreen</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorWhite</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">#fff</item>
        <item name="textColor">#000</item>
        <item name="textColor1">#B3B3B3</item>
        <item name="textLinear">#ECECEC</item>

    </style>


    <style name="ProjectDocTruyenOnline_Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#eeeeee</item>
        <item name="colorPrimaryDark">@color/dark_background</item>
        <item name="colorAccent">@color/colorGreen</item>
        <item name="android:textColorHint">@color/colorGreen</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/dark_background</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/dark_background</item>
        <item name="textColor">#fff</item>
        <item name="textColor1">#fff</item>
        <item name="textLinear">#9C9C9C</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="ToolbarColoredBackArrow" parent="ProjectDocTruyenOnline_Light">
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/sp18</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/sp18</item>
    </style>
</resources>