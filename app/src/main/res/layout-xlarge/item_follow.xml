<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_Story_Watched"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dimen_5"
    android:layout_marginHorizontal="@dimen/dimen_30">


    <ImageView
        android:id="@+id/img_follow"
        android:layout_width="@dimen/dimen_100"
        android:layout_height="@dimen/dimen_100"
        android:src="@drawable/s2"
        android:scaleType="centerCrop"/>


    <TextView
        android:id="@+id/tv_name_follow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:text="Name"
        android:layout_marginLeft="@dimen/dimen_5"
        android:textColor="#000"
        android:textSize="22sp" />

</LinearLayout>