<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_Story_Watched"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgStoryWatched"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_100"
            android:layout_marginRight="10dp"
            android:src="@drawable/book"
            app:civ_border_color="#FF000000" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nameStoryWatched"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgStoryWatched"
                android:text="Name"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:textColor="?attr/textColor"
                android:textSize="22sp" />

        </LinearLayout>


        <!--        <TextView-->
        <!--            android:id="@+id/txtTimeStoryWatched"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@+id/txtCountStoryWatched"-->
        <!--            android:layout_toRightOf="@+id/profileImage"-->
        <!--            android:text="Time" />-->
    </LinearLayout>
</LinearLayout>